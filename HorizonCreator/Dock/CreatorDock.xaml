<ResourceDictionary
    x:Class="HorizonCreator.Dock.CreatorDock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:alt="clr-namespace:NINA.WPF.Base.View;assembly=NINA.WPF.Base">

    <DataTemplate x:Key="HorizonCreator.Dock.HorizonCreatorDock_Dockable">
        <StackPanel Margin="5" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Button
                    Width="80"
                    Height="40"
                    Margin="5"
                    Command="{Binding AddPoint}"
                    Content="Add Point" />
                <Button
                    Width="80"
                    Height="40"
                    Margin="5"
                    Command="{Binding Save}"
                    Content="Save" />
                <Button
                    Width="80"
                    Height="40"
                    Margin="5"
                    Command="{Binding Clear}"
                    Content="Clear" />
                <Button
                    Width="80"
                    Height="40"
                    Margin="5"
                    Command="{Binding Minus}"
                    Content="&lt;-" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
                <TextBox
                    Width="350"
                    Height="500"
                    Margin="5,0,0,0"
                    Text="{Binding Points}"
                    VerticalScrollBarVisibility="Auto" />
            </StackPanel>
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>